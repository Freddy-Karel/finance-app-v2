    "run:low-coverage": "node -e \"require('node-fetch')('http://localhost:3000/api/_internal/runLowCoverage',{ method: 'POST', headers: { 'x-job-secret': process.env.JOB_SECRET } }).then(r=>r.json()).then(console.log)\"",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:generate": "prisma generate",
    "prisma:generate:force": "prisma generate --force",
    "clean:dev": "node ./scripts/clean-dev.js",
